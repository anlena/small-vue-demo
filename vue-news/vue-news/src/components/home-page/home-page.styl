@import "~common/stylus/index"

.home-page
  position fixed
  top 100px
  height 100%
  bottom 0
  width 100%
  background-color: #f2f2f2;
  .home-page-content
    height 100%
    overflow hidden
    .slider-wrapper
      position relative
      width 100%
      height 0
      padding-top 50%
      overflow hidden
      .slider-content
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        overflow hidden
    .newList
      padding: 30px 20px
      box-sizing: border-box
      background-color: #f2f2f2;
      .model
        background-color: #f2f2f2;
        &.morning
          color rgb(51,51,51)
          background-color rgb(255,255,255)
        &.night
          color rgb(184,184,184)
          background-color rgb(52,52,52)
        .new
          display flex
          box-sizing: border-box;
          position relative
          border: 1px solid #eaeaea;
          border-radius: 5px; /*no*/
          padding 40px 20px 40px 20px
          border-bottom: 15px solid #f2f2f2
          &.morning
            border-1px(rgba(7,17,27,0.1))
          &.night
            border-1px(rgb(43,43,43))
          .title
            flex 1
            margin-right 20px
            line-height 40px
            font-size 32px
          .avatar
            flex 0 0 120px
            width 120px
            height 120px
            img
              width 120px
              height 120px
              img[lazy=loading]
                height 120px
                width 120px
                margin auto