@import "~common/stylus/index.styl"
@import "~common/stylus/iconfont.css"

.sidebar
  position fixed
  top 0
  left 0
  z-index 50
  height 100%
  width 430px
  background-color rgb(35, 42, 48)
  transform translate3d(0, 0, 0)
  &.fold-enter-active, &.fold-leave-active
    transition all 0.5s
  &.fold-enter, &.fold-leave-active
    transform translate3d(-100%, 0, 0)
  .user
    padding 20px 20px 0
    font-size 0
    .avatar
      display inline-block
      margin-right 20px
      width 80px
      height 80px
      bg-image('useravatar')
      background-size 80px 80px
      background-repeat no-repeat
      border-radius 50%
      vertical-align top
    .username
      display inline-block
      font-size 30px
      color rgb(148, 153, 157)
      line-height 80px
    .back
      display inline-block
      vertical-align top
      position relative
      top 20px
      left 90px
      width 40px
      height 40px
  .menu-list
    display flex
    padding 20px 40px 20px 20px
    .menu
      flex 1
      text-align center
      .avatar
        margin-bottom 10px
        .iconfont
          color rgb(148, 153, 157)
          font-size 40px
      .name
        color rgb(148, 153, 157)
  .themes-list
    position absolute
    top 228px
    bottom 112px
    width 100%
    overflow hidden
    .themes
      display table
      width 100%
      padding-left 30px
      color rgb(148, 153, 157)
      &.current
        background-color rgb(27, 35, 41)
        color rgb(255, 255, 255)
      .icons
        display inline-block
        margin-right 10px
      .themetitle
        display inline-block
        line-height 100px

  .bottom-menu
    position absolute
    display flex
    bottom 0
    left 0
    width 100%
    height 112px
    .menu
      flex 1
      text-align center
      padding-top 10px
      .avatar
        margin-bottom 10px
        .iconfont
          color rgb(148, 153, 157)
          font-size 20px
        img
          margin-bottom 4px
      .name
        color rgb(148, 153, 157)

.mask
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 40
  background: rgba(7, 17, 27, 0.6)
  opacity 1
  &.fade-enter-active, &.fade-leave-active
    transition all 0.5s
  &.fade-enter, &.fade-leave-active
    opacity 0