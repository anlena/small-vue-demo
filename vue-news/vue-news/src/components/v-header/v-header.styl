@import "~common/stylus/index.styl"

.header
  position fixed
  top 0
  left 0
  font-size 0
  width 100%
  height 100px
  z-index 5
  text-align center
  .model
    &.morning
      color rgb(51, 51, 51)
      background-color rgb(2, 143, 214)
    &.night
      color rgb(184, 184, 184)
      background-color rgb(85, 85, 85)
    & > h2
      line-height 100px
      font-size:36px; /*px*/
      color white
    .navigation
      position absolute
      top 25px
      width 50px
      height 50px
      font-size 0
      left 20px
      padding 5px
      bg-image('navigation')
      background-size 50px 50px
      background-repeat no-repeat