@import "~common/stylus/index"
.newDetail
  position fixed
  top 0
  bottom: 0
  width 100%
  z-index 10
  overflow: scroll
  .content-wrapper
    .bg-image
      position relative
      width 100%
      height  300px
      overflow hidden
      z-index -1
      .title
        position absolute
        bottom 0
        box-sizing border-box
        line-height 1.5
        font-size:16px;  /*no*/
        padding 0 20px 20px 30px
        color rgb(255,255,255)
      img
        position absolute
        width 100%
    .body
      position absolute
      width 100%
      &.morning
        color rgb(51,51,51)
        background-color rgb(255,255,255)
      &.night
        color rgb(184,184,184)
        background-color rgb(52,52,52)